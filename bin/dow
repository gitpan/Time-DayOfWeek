use strict;
use Time::DayOfWeek qw(:all);

my $year = shift;
if(!defined($year) || $year =~ /^-+[h\?]/i) {
  die("USAGE: \`dow <Year YYYY> <Month 1..12> <Day 1..31>\`\n");
}
print(DayOfWeek($year, shift, shift));
